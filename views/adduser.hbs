<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="/adduser.css" />
    <title>MashUp Generator</title>
  </head>
  <body class="users_list">
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <p class="navbar-brand">Qlik Sense MashUp</p>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarContent">
          <ul class="navbar-nav me-auto">
            <i class="fa fa-home" style="margin-top: -1px;"></i>
            <li class="nav-item">
              <a class="nav-link" href="/main">Home</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/config">Configuration</a>
            </li>

            <li class="nav-item active">
              <a class="nav-link" href="/adduser">Users</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/mashup">MashUp</a>
            </li>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <span style="font-size: larger;">
              {{name}} 
            </span>
            <a
              class="btn btn-outline-danger my-2 my-sm-0"
              role="button"
              href="/register"
            >Logout</a>
          </form>
        </div>
      </div>
    </nav>

    <div class="container d-flex justify-content-center list">
      <div class="contact w-100">
        <h4>Add User <button class="btn btn-danger btn-lg" style="margin-left:2em;"><a href="/listuser" style="text-decoration: none; color:white">List All User</a></button></h4>
        
        <form action="/auth/adduser" method="POST">
          <div class="row">
            <div class="col-md-6">
              <input type="text" class="form-control input-box" id="name" name="name" placeholder="name" />
            </div>
            <div class="col-md-6">
              <input
                type="email"
                class="form-control input-box"
                id="email" name="email"
                placeholder="Email"
                required
              />
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <input
                type="password"
                class="form-control input-box"
                id="password" name="password"
                placeholder="password"
              />
            </div>
            <div class="col-md-6">
              <input
                id="date"
                type="password"
                class="form-control input-box"
                id="passwordConfirm" name="passwordConfirm"
                placeholder="Confirm Password"
              />
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-12">
              <textarea
                rows="6"
                class="form-control input-box"
                placeholder="Qlick UserID And Password"
              ></textarea>
            </div>
          </div>
          <div class="pull-left">
            <button type="submit" class="btn btn-success mt-2 px-5">Submit
              <i class="fa fa-long-arrow-right ml-2 mt-1"></i></button>
          </div>
        </form>
        {{#if message}}
                <h4 class="alert alert-success mt-4">{{message}}</h4>
        {{/if}}
      </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
     <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
     
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <script>
      $(document).ready(function(){ $(".navbar-brand").click(function(){
      $(".navbar-toggler").addClass("collapsed");
      $(".navbar-toggler").attr("aria-expanded","false");
      $(".navbar-collapse").removeClass("show"); }); });
    </script>
  </body>
</html>